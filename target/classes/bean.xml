<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id = "ramPc" class="org.example.Ram">
        <property name="tipo" value="DDR3"></property>
        <property name="dimensione" value="64"></property>
        <property name="nome" value="Gigaset"></property>
        <property name="computer" ref ="computer"></property>
    </bean>
    <bean id="computer" class="org.example.Computer">
        <property name="processore" value="Intel I7"></property>
        <property name="marca" value="Acer"></property>
        <property name="hdCapacita" value="1000"></property>
        <property name="ram" ref ="ramPc"></property>

    </bean>



</beans>